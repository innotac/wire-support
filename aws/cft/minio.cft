        "InstanceType": "t3.small",
        "KeyName": "innotac-wire",
        "Monitoring": "true",
        "Tags": [
          {
            "Key": "Name",
            "Value": "minio-2"
          },
          {
            "Key": "FQDN",
            "Value": "minio2.wire.uscis.dhs.gov"
          }
        ],
        "NetworkInterfaces": [
          {
            "AssociatePublicIpAddress": "false",
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": "subnet-190d766e",
             "GroupSet": [
               "sg-09c64c8c5397db2da",
               "sg-0bdb3dbf9334e48d0"
             ]
           }
         ],
         "BlockDeviceMappings": [
           {
             "DeviceName": "/dev/sda1",
              "Ebs": {
                "VolumeType": "gp2",
                "VolumeSize": "400",
                "DeleteOnTermination":"true",
                "Encrypted": "true"
              }
            }
          ],
          "UserData" : { "Fn::Base64" : { "Fn::Join" : [ ",", [
            "#!/bin/bash -v\n",
            "sudo hostnamectl set-hostname minio2.wire.innotac.com\n",
            "sudo groupadd wire\n",
            "sudo adduser wire\n",
            "echo 'Hello World'" ]]}}
      }
    },
  }
}
