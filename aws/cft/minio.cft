{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "MINIO1": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "AvailabilityZone": "us-east-1a",
        "DisableApiTermination": "true",
        "ImageId": "ami-0596162a6887bd8d0",
        "InstanceType": "t3.small",
        "KeyName": "innotac-wire",
        "Monitoring": "true",
        "Tags": [
          {
            "Key": "Name",
            "Value": "minio-1"
          },
          {
            "Key": "FQDN",
            "Value": "minio1.wire.uscis.dhs.gov"
          }
        ],
        "NetworkInterfaces": [
          {
            "AssociatePublicIpAddress": "false",
            "DeleteOnTermination": "true",
            "Description": "Primary network interface",
            "DeviceIndex": 0,
            "SubnetId": "subnet-c9e667e2",
             "GroupSet": [
               "sg-09c64c8c5397db2da",
               "sg-0bdb3dbf9334e48d0"
             ]
           }
         ],
         "BlockDeviceMappings": [
           {
             "DeviceName": "/dev/sda1",
              "Ebs": {
                "VolumeType": "gp2",
                "VolumeSize": "400",
                "DeleteOnTermination":"true",
                "Encrypted": "true"
              }
            }
          ],
          "UserData" : { "Fn::Base64" : { "Fn::Join" : [ ",", [
            "#!/bin/bash -v\n",
            "sudo hostnamectl set-hostname minio1.wire.innotac.com\n",
            "sudo groupadd wire\n",
            "sudo adduser wire\n",
            "echo 'Hello World'" ]]}}
      }
    },
    "MINIO2": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "AvailabilityZone": "us-east-1b",
        "DisableApiTermination": "true",
